<article class="single-post">
    <header>
        <h1>{{post.title}}</h1>
        <p>By {{post.user.username}} on {{format_date post.createdAt}}</p>
    </header>
    <section class="post-content">
        <p>{{post.content}}</p>
    </section>
    <div class="create-comment">
        <form method="post" id="comment-form">
            <textarea name="comment-text-area" id="comment-text-area" placeholder="Join the conversation"></textarea>
            <button type="submit">Submit</button>
        </form>
    </div>
    <footer>
        <h2>Comments</h2>
        <ul>
            {{#each post.comments}}
                <li>
                    <p><strong>{{this.user.username}}:</strong> {{this.comment}}</p>
                    <p><small>Posted on {{format_date this.createdAt}}</small></p>
                </li>
            {{else}}
                <li>No comments yet. Be the first to comment!</li>
            {{/each}}
        </ul>
    </footer>
</article>

<script src="/js/comment.js"></script>