<section class="edit-post">
    <h2>Edit Post</h2>
    <form method="POST" class="edit-post-form">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="title" value="{{title}}" required>
        </div>
        <div class="form-group">
            <label for="post-content">Content</label>
            <textarea id="post-content" name="content" rows="5" required>{{content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</section>

<script src="/js/edit-post.js"></script>